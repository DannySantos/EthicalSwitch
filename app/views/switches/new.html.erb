<div class="partner">
  <div class="highlight-bg row pt50 pb50 por">
    <div class="chosen-provider col-sm-8 text-white">
      You have chosen to switch your <%= @partner.industry %> provider to
    </div>
  </div>

  <div class="row">
    <main class="col-sm-8 col-sm-offset-2 pt20 pb40">
      <div class="tac">
        <%= image_tag "partner_#{@partner.filename}_full.png" %>
      </div>

      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 mb50">
          <p class="tac">Simply fill out this form and then you will be taken to the <%= @partner.name %> website to complete the switch. It should take less than 5 minutes!</p>

          <%= form_for(@switch) do |f| %>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            
            <% if @partner.industry == "homeloans" %>
              <%= f.text_field :postcode, class: "form-control", placeholder: "Postcode" %>
            <% else %>
              <%= f.text_field :phone, class: "form-control", placeholder: "Phone" %>
            <% end %>

            <%= f.hidden_field :partner_id, value: @partner.id %>
            <%= f.hidden_field :referrer %>
            <%= f.hidden_field :charity_id %>

            <div class="tac">
              <%= f.submit "SWITCH NOW", class: "btn btn-primary btn-padded" %>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="clb"></div>
      
      <hr>
      
      <%= render "partners/reasons_#{@partner.filename}" %>
    </main>
    
  </div>
</div>