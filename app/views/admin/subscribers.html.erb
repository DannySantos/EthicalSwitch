<% if current_user && current_user.admin %>
  <div class="row text-page-header mb40 text-s">
    <div class="col-sm-8 col-sm-offset-2">
      <%= link_to "Dashboard", admin_path %> > Subscribers
    </div>
    
    <div class="clb"></div>
  </div>
  
  <div class="subscribers admin col-sm-10 col-sm-offset-1">
    <h2 class="mb20">Subscribers</h2>

    <table class="w100p">
      <thead>
        <tr class="tal">
          <th class="col-sm-6">Email</th>
          <th class="col-sm-6">Postcode</th>
        </tr>
      </thead>

      <tbody>
        <%= render @subscribers %>
      </tbody>
    </table>
  </div>  
<% else %>
  <div class="tac">You are not authorized to view this page</div>
<% end %>