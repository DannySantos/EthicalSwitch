<% if current_user && current_user.admin %>
  <div class="row text-page-header mb40 text-s">
    <div class="col-sm-8 col-sm-offset-2">
      <%= link_to "Dashboard", admin_path %> > Messages
    </div>
    
    <div class="clb"></div>
  </div>
  
  <div class="messages col-sm-10 col-sm-offset-1">
    <h2 class="mb20">Messages</h2>

    <div class="row">
      <%= render @messages %>
    </div>
  </div>
<% else %>
  <div class="tac">You are not authorized to view this page</div>
<% end %>